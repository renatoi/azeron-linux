{
    "name": "azeron-software-v1",
    "version": "1.5.6",
    "author": "Azeron",
    "main": "main-process.js",
    "scripts": {
        "clean": "node clean.js",
        "postinstall": "electron-builder install-app-deps",
        "build-render": "npx webpack --env=NODE_ENV=production --env=target=render",
        "build-main": "npx webpack --env=NODE_ENV=production --env=target=main",
        "build": "npm run clean && npm run build-main && npm run build-render",
        "pack": "npm run build && electron-builder --config electron-builder.prod.json --dir",
        "pack:installer": "npm run build && electron-builder --config electron-builder.prod.json build --win",
        "just-pack": "electron-builder --config electron-builder.prod.json --dir",
        "dist": "npm run build && electron-builder --config electron-builder.prod.json",
        "publish": "npm run build && electron-builder --config electron-builder.prod.json build --win --publish always",
        "server": "webpack serve --env=NODE_ENV=development --env=target=render",
        "server:prod": "webpack serve --env=NODE_ENV=production --env=target=render",
        "main": "webpack --env=NODE_ENV=development --env=target=main --watch",
        "main:prod": "webpack --env=NODE_ENV=production --env=target=main --watch",
        "electron:run": "wait-on http://localhost:9000 & electron ./dist/.",
        "electron:run:prod": "wait-on http://localhost:8080 & electron ./dist/.",
        "start": "concurrently --kill-others \"npm run server\" \"npm run main\" \"npm run electron:run\"",
        "start:prod": "concurrently --kill-others \"npm run server:prod\" \"npm run main:prod\" \"npm run electron:run:prod\"",
        "prettier": "prettier --write \"**/*.{tsx,ts,js,css,html,json}\""
    },
    "dependencies": {
        "@ramonak/react-progress-bar": "^5.2.0",
